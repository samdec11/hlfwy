.row
  .small-12.columns
    %h1 Meet Me Halfway
.row
  .small-6.columns
    #address_form
      = form_tag do
        = label_tag 'number', 'Select number of locations'
        = select_tag 'number', (2..10).map{|i| "<option>#{i}</option>"}.join.html_safe, :include_blank => true
        = submit_tag 'Enter', :id=>'enter', :class=>'hide button round tiny'
    #search_form.hide
      = form_tag do
        = label_tag 'search', 'Search on Yelp'
        = text_field_tag 'search'
        = submit_tag 'Fetch', :id=>'fetch', :class => 'button round tiny'
    = button_tag 'New Search', :id=>'new_search', :class=>'hide button round success tiny'
    %table#results.hide
      %tr
        %th Name
        %th Category
        %th Rating
        %th Phone
        %th Address
  .small-6.columns
    #map_canvas
      %script
        display_map(40.7316, -73.9901, 13);